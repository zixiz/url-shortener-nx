{
  "extends": "./tsconfig.json", 
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "module": "NodeNext", 
    "moduleResolution": "NodeNext", 
    "types": ["node"],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true, 
    "target": "es2022", 
    "esModuleInterop": true,
    "sourceMap": true,
    "resolveJsonModule": true 
  },
  "exclude": ["jest.config.ts", "src/**/*.spec.ts", "src/**/*.test.ts"],
  "include": ["src/**/*.ts"]
}